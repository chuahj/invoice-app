<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active">Edit Invoice</li>
  </ol>
  <h1 class="display-4">Edit Invoice</h1>
  <form method="POST" action="/invoice/update/<%= invoice.id %>">
      <div class="form-group row">
        <label for="customerName" class="col-sm-2 col-form-label">Customer Name</label>
        <div class="col-sm-10">
          <input type="text" name="customerName" class="form-control" value="<%= invoice.customerName %>">
        </div>
      </div>
      <% for(i = 0; i <2 ; i ++){ %>
      <div class="form-group row">
        <label for="modelName" class="col-sm-2 col-form-label">Item Purchased</label>
        <div class="col-sm-3">
            <input type="text" name="itemName" class="form-control" value="<%=invoice.shoppingCart[i].itemName %>" />
        </div>
        
                <label class="col-sm-2 col-form-label">Quantity</label>
                <div class="col-sm-3">
                <input type="text" name="itemQuantity" class="col-sm-4 form-control" placeholder="Quantity" value="<%=invoice.shoppingCart[i].itemQuantity %>"/>
        </div>
      </div>
      <% } %>
      <input type="submit" value="Submit" class="btn btn-primary"/>
      <a href="/invoice/details/<%= invoice.id %>" class="btn btn-danger">Back</a>
      
    </form>
  